---
import '../styles/global.css'

const { title = '' } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {
      title !== '' ? (
        <title>{title} | Broke da EAR!</title>
      ) : (
        <title>Broke da EAR!</title>
      )
    }
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
      integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
      crossorigin="anonymous"
    />
    {
      /* This must be explicitly defined in order to connect to
       * Google fonts APIs when CSR is enabled. The url
       * `https://fonts.googleapis.com` is also references in `astro.config.ts`,
       * as it is required to tell astro that this site is allowed.
       */
    }
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="static w-full min-h-screen">
      <main>
        <div class="absolute z-0 top-0 left-0 overflow-y-clip w-full">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
