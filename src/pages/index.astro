---
import Logo from '@components/Logo.astro'
import CenteredLayout from '@layouts/CenteredLayout.astro'
---

<CenteredLayout>
  <div class="bg-amber-500">
    <div
      class="ml-auto mr-auto flex flex-col min-h-screen justify-center items-center"
    >
      <header>
        <Logo />
        <h1
          class="ml-auto mr-auto font-sans font-bold text-sm sm:text-lg p-2 text-neutral-700 w-fit"
          >BROKE DA EAR! AUDIO PLUGINS</h1
        >
      </header>
      <div
        style="height: 8; border-radius: 100%;"
        class="ml-auto mr-auto flex flex-col bg-red-200 p-4 justify-center max-w-xs sm:max-w-sm"
      >
        <section class="ml-auto mr-auto text-center">
          <p class="p-2 font-semibold tracking-wide text-xs"
            >Contact us at <a
              href="mailto:howzit@brokedaear.com"
              class="underline font-mono">howzit@brokedaear.com</a
            ></p
          >
        </section>
      </div>
      <footer>
        <p
          class="font-mono text-xs sm:text-sm tracking-wide font-semibold text-neutral-700 p-8"
          >...our site is under construction...</p
        ></footer
      >
    </div>
  </div>
</CenteredLayout>
